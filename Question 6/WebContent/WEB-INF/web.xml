<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	id="WebApp_ID" version="2.5">
	<display-name>Question 6</display-name>
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>

	<servlet>
		<servlet-name>StudentAddController</servlet-name>
		<servlet-class>com.studentApp.StudentAddController</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>StudentAddController</servlet-name>
		<url-pattern>/addStudent</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>ShowStudentController</servlet-name>
		<servlet-class>com.studentApp.ShowStudentController</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>ShowStudentController</servlet-name>
		<url-pattern>/showStudents</url-pattern>
	</servlet-mapping>

</web-app>